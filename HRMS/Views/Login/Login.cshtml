</html>
<script src="~/global_assets/js/main/jquery.min.js"></script>
<script>
    function Refresh() {
        $.ajax({
            url: "/Login/RefreshCaptcha",
            type: 'GET',
            data: {},
            dataType: "json",
            success: function (resultData) {
                $("#captcha").val(resultData);
            }
        });
    }
    $("form").submit(function () {
        var _txt1 = $('#captcha').val();
        var _txt2 = $('#txtcaptcha').val();

        if (_txt1 == _txt2) {
            @*alert('Matching!');*@
            return true;
        }
        else {
            alert('Captch Not Matching!');
            return false;
        }
    });
    $('#captcha').bind("cut copy paste", function (e) {
        e.preventDefault();
    });
</script>


